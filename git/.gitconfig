# Detta är din OFFENTLIGA git-konfiguration.

[core]
    editor = nvim
    hooksPath = ~/.dotfiles/.githooks

[commit]
    template = ~/.config/git/gitmessage

# ==============================================================
# Git-alias för portabilitet över olika shells
# ==============================================================
[alias]
    unstage = restore --staged
    lg      = log --graph --pretty=format:'%C(yellow)%h%Creset %s %C(dim)%cr%Creset'

# ==============================================================
# Kontext-baserad identitet (baserat på katalog)
# ==============================================================
[include]
    path = ~/.config/git/local/default.conf

[includeIf "gitdir:~/.dotfiles/"]
    path = ~/.config/git/local/personal.conf

[includeIf "gitdir:~/hub/projects/"]
    path = ~/.config/git/local/personal.conf

[includeIf "gitdir:~/hub/personal/"]
    path = ~/.config/git/local/personal.conf

[includeIf "gitdir:~/notes/"]
    path = ~/.config/git/local/personal.conf

[includeIf "gitdir:~/hub/work/"]
    path = ~/.config/git/local/work.conf

[includeIf "gitdir:~/hub/school/"]
    path = ~/.config/git/local/school.conf
