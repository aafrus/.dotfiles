# Detta är din OFFENTLIGA git-konfiguration.

[core]
    editor = nvim

[commit]
    template = ~/.config/git/gitmessage

# ==============================================================
# Git-alias för portabilitet över olika shells
# ==============================================================
[alias]
    # Korta kommandon
    a = add
    b = branch
    c = commit -m
    co = checkout
    d = diff
    f = fetch
    l = log --graph --oneline --decorate --all # Ändrade från 'lg' för enkelhet
    m = merge
    p = push
    r = rebase
    s = status -sb # Från ditt 'gs'

    # Längre kommandon
    gg = log --graph
    gsm = status -sbuno
    gpr = request-pull
    unstage = restore --staged # Från ditt 'gu'

# ==============================================================
# Kontext-baserad identitet (baserat på katalog)
# ==============================================================
[includeIf "gitdir:~/personal/"]
    path = ~/.config/git/personal.conf

[includeIf "gitdir:~/work/"]
    path = ~/.config/git/work.conf

[includeIf "gitdir:~/school/"]
    path = ~/.config/git/school.conf
